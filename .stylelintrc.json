{
	"extends": [
		"stylelint-config-standard-scss",
		"stylelint-config-html/svelte",
		"stylelint-config-clean-order"
	],
	"rules": {
		"at-rule-empty-line-before": [
			"always",
			{
				"except": ["after-same-name", "first-nested"],
				"ignoreAtRules": ["elseif", "else", "mixin"]
			}
		]
	},
	"fix": true
}
