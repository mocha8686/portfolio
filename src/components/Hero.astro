---
import { Icon } from 'astro-icon/components';
import Typewriter from './Typewriter.svelte';

const iconSize = 32;
---

<div class="hero">
	<h1 class="logo">Logo</h1>
	<Typewriter client:load />
	<nav class="nav">
		<a href="#">About</a>
		<a href="#">Projects</a>
		<a href="#">Skills</a>
		<a href="#">Contact</a>
	</nav>
	<nav class="social">
		<a href="https://github.com/mocha8686" target="_blank">
			<Icon name="iconoir:github" size={iconSize} />
			GitHub
		</a>
		<a href="mailto:june.mocha8686@gmail.com">
			<Icon name="iconoir:send-mail" size={iconSize} />
			Email
		</a>
	</nav>
	<div class="down">
		<Icon name="iconoir:nav-arrow-down" size={iconSize} />
	</div>
</div>

<script>
	document.addEventListener('scroll', () => {
		const classList = document.querySelector('.down')?.classList;
		if (window.scrollY > 0) {
			classList?.add('hidden');
		} else {
			classList?.remove('hidden');
		}
	});
</script>
